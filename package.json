{
  "name": "email-sms-marketing-platform",
  "version": "1.0.0",
  "description": "Production-ready Email & SMS Marketing Platform with AI chatbot and IVR",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:security": "playwright test tests/e2e/security.spec.ts",
    "test:all": "npm run test:unit && npm run test:e2e",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:scan": "powershell -ExecutionPolicy Bypass -File scripts/security-scan.ps1",
    "playwright:install": "playwright install",
    "playwright:report": "playwright show-report",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:seed": "node prisma/seed.js",
    "postinstall": "prisma generate",
    "setup": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
